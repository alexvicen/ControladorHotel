<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.multimedia.aes.controladorhotel.nucleo.Habitacion">

    <ImageSwitcher
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/iswHabitacion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_media_rew"
        android:id="@+id/btnAnterior"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnSiguiente"
        android:background="@android:drawable/ic_media_ff"
        android:layout_alignTop="@+id/btnAnterior"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/iswHabitacion" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Habitacion Primera"
                android:id="@+id/txt1"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Cras cursus turpis urna, ac sollicitudin mi aliquet in. Suspendisse aliquam egestas nisl, in facilisis magna sagittis eget. Pellentesque vel augue venenatis, aliquet sem sit amet, ullamcorper ex. Mauris mattis ultricies purus, eu rutrum erat fermentum nec. Mauris efficitur eros sed dolor efficitur semper. Quisque bibendum congue lacus et ullamcorper. Praesent arcu ante, fermentum non dui non, feugiat hendrerit mi."
                android:id="@+id/txt2"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
